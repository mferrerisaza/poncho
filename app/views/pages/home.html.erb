    <div class="map-label">
      <div class="color-indicator color-indicator-existentes">
      </div>
      <div class="label-text">
        Rutas existentes
      </div>
    </div>
    <div class="map-label">
      <div class="color-indicator color-indicator-proyectadas">
      </div>
